{
  "info": {
    "name": "go-fiber-postgres",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": [""]
        }
      }
    },
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"user1\",\n  \"password\": \"secret\",\n  \"name\": \"Test User\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users",
          "host": ["{{baseUrl}}"],
          "path": ["users"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"user1\",\n  \"password\": \"secret\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/login",
          "host": ["{{baseUrl}}"],
          "path": ["login"]
        }
      }
    },
    {
      "name": "Get Me (protected)",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "<token>"}
        ],
        "url": {
          "raw": "{{baseUrl}}/api/me",
          "host": ["{{baseUrl}}"],
          "path": ["api", "me"]
        }
      }
    }
  ]
  ,"variable": [
    {
      "key": "baseUrl",
      "value": "localhost:4000",
      "type": "string"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}
